@model reserva_de_sala_dsm.Models.Usuario

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h1>@ViewData["Title"]</h1>


<h3>Tem certeza que deseja excluir este usuário?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Administrador</dt>
        <dd class="col-sm-10">@(Model.Admnistrador ? "Sim" : "Não")</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>